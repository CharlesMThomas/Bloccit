<h1>New Ad</h1>
<div class="row">
  <div class="col-md-4">
    <p>Advertisement Guidelines</p>
    <ul>
      <li>Title must be under 20 characters</li>
      <li>Enter price in whole dollars</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |a| %>
      <div class="form-group">
        <%= a.label :title %>
        <%= a.text_field :title, class: 'form-control', placeholder: "Enter Ad Title" %>
      </div>
      <div class="form-group">
        <%= a.label :copy %>
        <%= a.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter Ad Copy" %>
      </div>
      <div class="form-group">
        <%= a.label :price %>
        <%= a.text_field :price, class: 'form-control', placeholder: "Enter Price" %>
      </div>
      <div class="form-group">
        <%= a.submit "Submit Ad", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
