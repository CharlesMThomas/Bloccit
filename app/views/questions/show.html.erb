<h1>
  <%= @question.title %>
  <% if @question.resolved %>
    <%= p '- (Resolved)' %>
  <% end %>
</h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @question.body %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>
    <%= link_to "Delete Post", @question, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this question?'} %>
    <%= link_to "Show All", questions_path(@question), class: 'btn btn-primary' %>
  </div>
</div>
